<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div></div>
<div class="row">
  <% @drugs.each do |drug| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag drug.image.url(:medium), class:'image'),drug%>
      </div>
    </div>
  <% end %>
</div>
<span class="btn"><%= link_to 'New Drug', new_drug_path %></span>